<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondorestaurantes"
    tools:context=".Restaurantes">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zona de restaurantes"
        android:textAlignment="center"
        app:layout_constraintVertical_bias="0.0"
        android:textSize="30dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:autoSizeTextType="uniform"
        android:fontFamily="sans-serif-condensed-light"
        android:textColor="@color/white"

        />


    <ImageView
        android:id="@+id/logo11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/restaurante1"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintHorizontal_bias="0"/>



    <ImageView
        android:id="@+id/logo8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/restaurante10"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintHorizontal_bias="0.05"/>

    <Button
        android:id="@+id/botonvermasrestaurantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#95a532"
        android:text="Ver mas"
        android:textColor="#311B92"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.1"/>

</androidx.constraintlayout.widget.ConstraintLayout>